# GCP Configuration
GCP_PROJECT_ID=your-gcp-project-id
GCP_REGION=us-central1

# Google Cloud IAM & Workspace Configuration
GCP_SERVICE_ACCOUNT_FILE=/path/to/service-account-key.json
GCP_SERVICE_ACCOUNT_JSON=
WORKSPACE_CUSTOMER_ID=C01234567
WORKSPACE_ADMIN_EMAIL=admin@yourdomain.com
WORKSPACE_DOMAIN=yourdomain.com

# Security Command Center Configuration
SCC_ORGANIZATION_ID=
SCC_SOURCE_ID=

# Database Configuration
DATABASE_URL=postgresql://iam_user:iam_password@localhost:5432/iam_analyzer

# Redis Configuration
REDIS_URL=redis://localhost:6379

# Application Configuration
SECRET_KEY=your-jwt-secret-key-here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# API Configuration
API_PREFIX=/api/v1
DEBUG=true
ENVIRONMENT=development
APP_NAME=ZeroTrust IAM Analyzer
APP_VERSION=1.0.0

# CORS Configuration
CORS_ORIGINS=["http://localhost:3000", "http://localhost:5173"]

# Cloud Run Configuration (for production)
CLOUD_RUN_SERVICE_URL=
PORT=8080

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json

# Security Configuration
BCRYPT_ROUNDS=12
SESSION_TIMEOUT_HOURS=24

# Cache Configuration
CACHE_TTL_SECONDS=3600
CACHE_MAX_SIZE=1000

# External API Rate Limiting
GCP_IAM_API_RATE_LIMIT=100
GCP_ASSET_API_RATE_LIMIT=100
WORKSPACE_API_RATE_LIMIT=100
SCC_API_RATE_LIMIT=100

# Monitoring and Observability
ENABLE_METRICS=true
ENABLE_TRACING=true
SAMPLING_RATE=0.1

# Email Configuration (for notifications)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
EMAIL_FROM=
EMAIL_FROM_NAME=

# Webhook Configuration (for integrations)
WEBHOOK_URL=
WEBHOOK_SECRET=

# Feature Flags
ENABLE_SCHEDULER=true
ENABLE_EMAIL_NOTIFICATIONS=false
ENABLE_WEBHOOK_NOTIFICATIONS=false
ENABLE_ADVANCED_ANALYTICS=true
ENABLE_POLICY_ANALYZER=true
ENABLE_IAM_RECOMMENDER=true
ENABLE_SECURITY_COMMAND_CENTER=true

# Development Settings
RELOAD=true
LOG_REQUESTS=true
SHOW_DOCS=true
