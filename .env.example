# GCP Configuration
GCP_PROJECT_ID=your-gcp-project-id
GCP_REGION=us-central1

# Microsoft Entra ID Configuration
AZURE_TENANT_ID=your-azure-tenant-id
AZURE_CLIENT_ID=your-azure-client-id
AZURE_CLIENT_SECRET=your-azure-client-secret
AZURE_AUTHORITY=https://login.microsoftonline.com

# Database Configuration
DATABASE_URL=postgresql://iam_user:iam_password@localhost:5432/iam_analyzer

# Redis Configuration
REDIS_URL=redis://localhost:6379

# Application Configuration
SECRET_KEY=your-jwt-secret-key-here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# API Configuration
API_PREFIX=/api/v1
DEBUG=true
ENVIRONMENT=development
APP_NAME=ZeroTrust IAM Analyzer
APP_VERSION=1.0.0

# CORS Configuration
CORS_ORIGINS=["http://localhost:3000", "http://localhost:5173"]

# Cloud Run Configuration (for production)
CLOUD_RUN_SERVICE_URL=
PORT=8080

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json

# Security Configuration
BCRYPT_ROUNDS=12
SESSION_TIMEOUT_HOURS=24

# Cache Configuration
CACHE_TTL_SECONDS=3600
CACHE_MAX_SIZE=1000

# External API Rate Limiting
AZURE_API_RATE_LIMIT=100
GCP_API_RATE_LIMIT=100
WORKSPACE_API_RATE_LIMIT=100

# Monitoring and Observability
ENABLE_METRICS=true
ENABLE_TRACING=true
SAMPLING_RATE=0.1

# Email Configuration (for notifications)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
EMAIL_FROM=
EMAIL_FROM_NAME=

# Webhook Configuration (for integrations)
WEBHOOK_URL=
WEBHOOK_SECRET=

# Feature Flags
ENABLE_SCHEDULER=true
ENABLE_EMAIL_NOTIFICATIONS=false
ENABLE_WEBHOOK_NOTIFICATIONS=false
ENABLE_ADVANCED_ANALYTICS=true

# Development Settings
RELOAD=true
LOG_REQUESTS=true
SHOW_DOCS=true