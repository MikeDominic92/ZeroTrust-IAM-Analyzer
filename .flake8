# Flake8 Configuration for ZeroTrust IAM Analyzer

[flake8]
# Maximum line length (aligned with black)
max-line-length = 100

# Extend ignore list (compatible with black)
extend-ignore =
    # E203: whitespace before ':' (black compatibility)
    E203,
    # E266: too many leading '#' for block comment
    E266,
    # E501: line too long (handled by black)
    E501,
    # W503: line break before binary operator (black compatibility)
    W503

# Exclude patterns
exclude =
    .git,
    __pycache__,
    .venv,
    .eggs,
    *.egg,
    build,
    dist,
    alembic/versions,
    node_modules,
    .mypy_cache,
    .pytest_cache,
    htmlcov

# Per-file ignores
per-file-ignores =
    # Allow unused imports in __init__.py
    __init__.py:F401,F403
    # Allow star imports in alembic env.py
    alembic/env.py:F401,F403

# Maximum complexity
max-complexity = 10

# Error codes to enable
select = B,C,E,F,W,T4,B9

# Statistics
statistics = True
count = True
